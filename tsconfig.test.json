{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@xskynet/contracts": ["packages/contracts/src/index.ts"],
      "@xskynet/core": ["packages/core/src/index.ts"],
      "@xskynet/cli": ["packages/cli/src/index.ts"],
      "@xskynet/plugin-claude": ["packages/plugin-claude/src/index.ts"],
      "@xskynet/plugin-http": ["packages/plugin-http/src/index.ts"],
      "@xskynet/plugin-shell": ["packages/plugin-shell/src/index.ts"],
      "@x-skynet/plugin-interface": ["packages/plugin-interface/src/index.ts"],
      "@x-skynet/router": ["packages/router/src/index.ts"]
    },
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": [
    "packages/**/src/**/*.ts",
    "packages/**/src/__tests__/**/*.ts",
    "**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
