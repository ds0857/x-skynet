{
  "name": "x-skynet",
  "private": true,
  "version": "0.1.0",
  "description": "Open-source AI agent orchestration framework â€” 15 minutes to your first running agent",
  "license": "Apache-2.0",
  "packageManager": "pnpm@9",
  "workspaces": [
    "packages/*",
    "examples/*",
    "templates/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --cache --cache-location ./.pnpm-local/eslint-cache",
    "lint:fix": "pnpm run lint -- --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "typecheck": "pnpm -r --if-present typecheck",
    "dev": "pnpm --filter @xskynet/cli dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky",
    "onboard": "node -e \"console.log('Prereqs: Node>=20, pnpm>=9');\" && pnpm install && pnpm typecheck && pnpm lint && pnpm test"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-import-resolver-typescript": "^3.6.1"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "form-data": ">=4.0.4",
      "minimatch": ">=10.2.1",
      "qs": ">=6.14.1",
      "tough-cookie": ">=4.1.3",
      "test-exclude": "^7.0.1"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,md,mdx,yml,yaml,cjs,mjs}": [
      "pnpm exec prettier --write",
      "pnpm exec eslint --fix --max-warnings=0"
    ]
  }
}
