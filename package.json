{
  "name": "x-skynet",
  "private": true,
  "version": "0.1.0",
  "description": "Open-source AI agent orchestration framework â€” 15 minutes to your first running agent",
  "license": "Apache-2.0",
  "packageManager": "pnpm@9",
  "engines": {
    "node": ">=20.11"
  },
  "volta": {
    "node": "20.11.1"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "typecheck": "pnpm -r --parallel=false typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:pkgs": "pnpm -r lint",
    "lint:docs": "node ./tools/docs-lint.mjs",
    "test": "vitest run --coverage",
    "dev": "pnpm -r --filter @xskynet/core build && pnpm --filter @xskynet/demo dev",
    "dev:cli": "pnpm --filter @xskynet/cli dev",
    "dev:demo": "pnpm --filter @xskynet/demo dev",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.5.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "pnpm": "^9.12.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0"
  }
}
