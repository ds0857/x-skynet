{
  "name": "x-skynet",
  "private": true,
  "version": "0.1.0",
  "description": "Open-source AI agent orchestration framework â€” 15 minutes to your first running agent",
  "license": "Apache-2.0",
  "packageManager": "pnpm@9",
  "workspaces": [
    "packages/*",
    "examples/*",
    "templates/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "typecheck": "pnpm -r typecheck",
    "dev": "pnpm --filter @xskynet/cli dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^7.0.0",
    "globals": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.2.5"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "form-data": ">=4.0.4",
      "minimatch": ">=10.2.1",
      "qs": ">=6.14.1",
      "tough-cookie": ">=4.1.3",
      "test-exclude": "^7.0.1"
    }
  }
}
