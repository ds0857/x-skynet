{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@xskynet/contracts": ["packages/contracts/src"],
      "@xskynet/core": ["packages/core/src"],
      "@xskynet/cli": ["packages/cli/src"]
    }
  }
}
